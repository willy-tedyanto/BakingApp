<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardTextStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="listItemStyle">
        <item name="android:layout_marginTop">@dimen/list_item_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_item_left_margin</item>
        <item name="android:layout_marginRight">@dimen/list_item_right_margin</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
</resources>
